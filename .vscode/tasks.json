{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "gcc ${file} -o ${fileDirname}/dist/${fileBasenameNoExtension}.exe",
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}